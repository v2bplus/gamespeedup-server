# http://editorconfig.org
root = true

[*]
# 编码格式
charset = utf-8

# 文件结尾符
insert_final_newline= true
end_of_line = lf

# space 缩进
indent_style = space
indent_size = 4
tab_width =4

# 去除行尾空白字符
trim_trailing_whitespace = true

max_line_length = 180

[*.yml]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
